<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:labelVisibilityMode="unlabeled"
        android:background="@drawable/inverse_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_gravity="">

        <ImageButton
            android:id="@+id/first_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_homeicon"
            android:layout_gravity="bottom|center_horizontal"/>

        <ImageButton
            android:id="@+id/second_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_listicon"
            android:layout_gravity="bottom|center_horizontal"/>


        <ImageButton
            android:id="@+id/third_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_feather_settings"
            android:layout_gravity="bottom" />

    </LinearLayout></com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>